$wetap-blue: rgb(10, 168, 228);
$wetap-light-blue: rgb(59, 185, 233);
$wetap-highlight-blue: rgb(157, 220, 244);
$wetap-dark-blue: rgb(0, 53, 109);

@media only screen and (device-height: 480px){
  div#logo img{
    display: none;
  }
}


@media only screen and (max-device-width: 480px) {

  .alert-danger {
    position: absolute;
    top: 0px;
    left: 0px;
    box-sizing: border-box;
    width: 100%;
  }
  body {
    color: white;
    text-align: center;
    background-color: $wetap-blue;
  }

  input{
    font-size: 1.2em;
  }

  input[type="email"], input[type="password"]{
    background-color: $wetap-light-blue;
    color: $wetap-dark-blue;
    font-size: 1.3em;
    border: none;
    position: relative;
    height: 44.5px;
    padding-left: 15px;
    margin-bottom: 5px;
    box-sizing: border-box;
    width: 100%;
  }

  input[type="submit"]{
    background-color: $wetap-dark-blue;
    color: white;
    border: none;
    width: 73%;
    height: 45px;
    border-radius: 4px;
    margin-top: 13px;
  }

  input::-webkit-input-placeholder {
    color: $wetap-highlight-blue;
  }
  a:link, a:visited{
    color: white;
  }

  #wetap-accounts-header{

    // Iphone 3.5 inch
    // selectors in nested media queries in scss are rooted in the most recent query:
    @media only screen and (device-height: 480px){
      margin-top: 18px;
      margin-bottom: 11px;
      img{
        margin-bottom: 15px;
      }
    }

    // Iphone 4 inch
    @media only screen and (device-height: 568px){
      margin-top: 30px;
      margin-bottom: 22px;
      img{
        margin-bottom: 25px;
      }
    }

    img{
      height: 76px;
      width: 76px;
    }

    .path-alternative{
      padding: 15px;
      font-size: 1.2em;

    }
  }

  form#new_user{
    margin: 0 0 15px;
  }

  #social-login-group{

    $social-login-gutter: 28px;
    $social-login-width: 32px;

    height: 45px;
    /* three social buttons plus padding */
    width: $social-login-width * 3 + $social-login-gutter * 2;
    margin-right: auto;
    margin-left: auto;

    .social-login{
      display: block;
      height: 45px;
      width: $social-login-width;
      background-size: 32px 45px;
      background-repeat: no-repeat;
      display: block;
      float: left;
      margin-right: $social-login-gutter;
    }
    .social-login:last-child{
      margin-right: 0px;
    }
    #facebook-login{
      background-image: url(<%= asset_path("wetap/social/droplet-facebook-45x32@2x.png") %>);
    }
    #facebook-login:active{
      background-image: url(<%= asset_path("wetap/social/droplet-facebook-selected-45x32@2x.png") %>);
    }
    #twitter-login{
      background-image: url(<%= asset_path("wetap/social/droplet-twitter-45x32@2x.png") %>);
    }
    #twitter-login:active{
      background-image: url(<%= asset_path("wetap/social/droplet-twitter-selected-45x32@2x.png") %>);
    }
    #google-plus-login{
      background-image: url(<%= asset_path("wetap/social/droplet-google-plus-45x32@2x.png") %>);
    }
    #google-plus-login:active{
      background-image: url(<%= asset_path("wetap/social/droplet-google-plus-selected-45x32@2x.png") %>);
    }
  }

  #account-misc-links{
    br {
      display: none;
    }
    a:first-child{
      padding-top: 25px;
    }
    a{
      display:block;
      padding-top: 21px;
    }
    a:link, a:visited{
      color: $wetap-dark-blue;
    }
  }

  #devise-links{
    a:link, a:visited {
      color: $wetap-dark-blue;
    }
  }
}
